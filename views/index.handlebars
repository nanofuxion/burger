<div class="container">
    <div class="jumbotron rounded-pill mt-5 mb-3 d-flex justify-content-center">
      <h1>EAT DA Burger!!!</h1>
    </div>
  <div class="jumbotron rounded-pill mt-4">
    <div class="row">
      <div class="col-sm-12 col-lg-6">
        <h2>burgers left!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-sm-12 col-lg-6">
        <h2>burgers you've Eaten!</h2>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
